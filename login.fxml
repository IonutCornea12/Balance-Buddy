<HBox alignment="CENTER" maxHeight="569.0" maxWidth="861.0" minHeight="397.0" minWidth="600.0" prefHeight="569.0" prefWidth="836.0" style="-fx-background-color: 1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proiect2.LoginController">

    <VBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="479.0" prefWidth="355.0" HBox.hgrow="ALWAYS">
        <TextField fx:id="userEmailField" focusTraversable="false" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="37.0" prefWidth="335.0" promptText="Email" style="-fx-border-color: #4c8647;" VBox.vgrow="ALWAYS">

            <font>
                <Font name="Kollektif Bold" size="19.0" />
            </font>
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </TextField>
        <PasswordField fx:id="userPasswordField" focusTraversable="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="37.0" prefWidth="335.0" promptText="Password" style="-fx-border-color: #4c8647;">
            <font>
                <Font name="Kollektif Bold" size="19.0" />
            </font>
        </PasswordField>

        <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="52.0" prefWidth="377.0">
            <Button mnemonicParsing="false" onAction="#login" prefHeight="37.0" prefWidth="104.0" style="-fx-background-color: white; -fx-border-color: #4c8647;" text="LOG IN" textFill="#4c8647">
                <font>
                    <Font name="Apple Braille Outline 6 Dot" size="19.0" />
                </font>
                <HBox.margin>
                    <Insets bottom="10.0" right="20.0" top="15.0" />
                </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#createAccount" prefHeight="37.0" prefWidth="211.0" style="-fx-background-color: white; -fx-border-color: #4c8647;" text="CREATE ACCOUNT" textFill="#4c8647">
                <font>
                    <Font name="Apple Braille" size="19.0" />
                </font>
            <HBox.margin>
               <Insets bottom="10.0" top="15.0" />
            </HBox.margin>
            </Button>
        </HBox>

        <Label fx:id="statusLabel" textFill="#4c8647">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin></Label>
    </VBox>
    <ImageView fitHeight="360.0" fitWidth="362.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
        <image>
            <Image url="@BalanceBuddy.png" />
        </image>
    </ImageView>
